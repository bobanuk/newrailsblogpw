<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>
      <th>Data</th>
      <th>Status</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Destroy</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= truncate(post.content , length: 30) %></td>
        <td><%= post.user.name %></td>
        <td><%= post.created_at.strftime '%d.%m.%Y' %></td>
        <td><%= post.status %></td>
        <td><%= link_to 'Show', post %></td>

        <% if can? :update, post %>
            <td><%= link_to 'Edit', edit_admin_post_path(post) %></td>
        <% end %>

        <% if can? :destroy, post %>
            <td><%= link_to 'Destroy', [:admin,post], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= will_paginate @posts, renderer: BootstrapPagination::Rails %>

<% if can? :create, Post %>
    <%= link_to 'New Post', new_admin_post_path %>
<% end %>
